{{template "base" .}}

{{define "title"}}Home{{end}}

{{define "main"}}
    <h2>Latest Snippets</h2>
    {{if .Snippets}}
        <table>
            <tr>
                <th>Title</th>
                <th>Created</th>
                <th>Id</th>
            </tr>
            {{range .Snippets}}
            <tr>
                <td><a href='/snippet?id={{.ID}}'>{{.Title}}</a></td>
                <!-- note how we call a function and pass parameters (no parenths) -->
                <td>{{.Created | humanDate}}</td>
                <td>#{{.ID}}</td>
            </tr>
            {{end}}
        </table>
    {{else}}
        <p>There's nothing to see here yet!</p>
    {{end}}
{{end}}